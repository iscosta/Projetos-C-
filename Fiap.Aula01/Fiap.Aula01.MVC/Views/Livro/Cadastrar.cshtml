
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>
<form action="/Livro/Cadastrar" method="post">
    <div class="form-group">
        <label for="id-titulo">Título</label>
        <input type="text" name="titulo" id="id-titulo" class="form-control" />
    </div>
    <div class="form-group">
        <label for="id-autor">Autor</label>
        <input type="text" name="autor" id="id-autor" class="form-control" />
    </div>
    <div class="form-group">
        <label for="id-data">Data Publicação</label>
        <input type="date" name="dataPublicacao" id="id-data" class="form-control" />
    </div>
    <div class="form-group">
        <label for="id-preco">Preço</label>
        <input type="number" name="preco" id="id-preco" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Cadastrar" class="btn btn-primary" />
    </div>
</form>

