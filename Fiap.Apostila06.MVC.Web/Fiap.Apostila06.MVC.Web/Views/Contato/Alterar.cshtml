@model Fiap.Apostila06.MVC.Web.Models.Contato
@{
    ViewBag.Title = "Alterar";
}

<h2>Alterar</h2>

@using (Html.BeginForm())
{
    <!--Campo oculto para armazenar o id do contato que será atualizado-->
    @Html.HiddenFor(c => c.ContatoId)
    <div class="form-group">
        @Html.LabelFor(c => c.Nome)
        @Html.TextBoxFor(c => c.Nome, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Telefone)
        @Html.TextBoxFor(c => c.Telefone, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.DataNascimento)
        @Html.TextBoxFor(c => c.DataNascimento, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(c => c.Familiar)
        @Html.LabelFor(c => c.Familiar)
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-success" />
        @Html.ActionLink("Cancelar","Listar", null, new { @class = "btn btn-default"})
    </div>
}

