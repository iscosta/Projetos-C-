@model Fiap.Apostila08.MVC.Web.Models.Consulta
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Agendar uma consulta</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(c => c.Data)
        @Html.TextBoxFor(c => c.Data, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Especialidade)
        @Html.TextBoxFor(c => c.Especialidade, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Local)
        @Html.TextBoxFor(c => c.Local, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Paciente)
        @Html.DropDownListFor(c => c.PacienteId, ViewBag.pacientes as SelectList,
            "Selecione", new { @class = "form-control"})
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
}

